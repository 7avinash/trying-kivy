<selection>:
    stall: stall
    stal: stal
    
    canvas.before:
        Color:
            rgba: 1,1,1,0
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
    BoxLayout:
        spacing: 10
        orientation:'vertical'
        center: root.center_x, self.height / 2 + 20
        BoxLayout:
            Label:
                text:"welcome to future of retails"
            Spinner:
                id:stall
                text:'Get stall numbers'
                values:('S1','S2','S3')
                size_hint: .2, .1
                pos_hint: {'x':.4}
                height: '48dp'
                
            
        Spinner:
            id:stal
            text:'company'
            values:('nokia','samsung','apple')
            size_hint: .2, .2
            pos_hint: {'x':.4}
            height: '48dp'
            on_text: root.op()
            
            
        Spinner:
            text:'price'
            values:('1000-2000','2000-5000','5000-10000')
            size_hint: .2, .2
            pos_hint: {'x':.4}
            height: '48dp'
        Spinner:
            text:'specifications'
            values:('2G','3G','4G')
            size_hint: .2, .2
            pos_hint: {'x':.4}
            height: '48dp'
        Label:
            text:"Other Specifications:"
            size_hint: .2, .1
            pos_hint: {'x':.2}
        TextInput:
            size_hint: .4, .2
            pos_hint: {'x':.4}
            
        BoxLayout:
            Button:
                size_hint: .1, .2
                text:"back"
                on_release:root.manager.current='menu'
            Button:
                size_hint: .1, .2
                pos_hint: {'x':.45}
                id: help
                text: "Help?"
                on_release:root.manager.current='help'
            
            Button:
                size_hint: .1, .2
                pos_hint: {'x':.45}
                id: button
                text: "Go"
                on_release: root.manager.current='Electronics'
    
    
