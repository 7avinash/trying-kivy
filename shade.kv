<Electronics>:
    popup:popup.__self__
    popup1:popup1.__self__
    popup2:popup2.__self__
    popup3:popup3.__self__
    
    
    GridLayout:
        cols:2
        id:g1
        spacing: 2
        Popup:
            id:popup2
            on_parent:
                if self.parent==g1: self.parent.remove_widget(self)
            title: 'friends'
            BoxLayout:
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text:"Your friend sai kiran has brought this phone"
                    Button:
                        size_hint: .3, .1
                        pos_hint:{'x':.35,'y':.5}
                        text: "Get his review"
                    BoxLayout:
                        size_hint: 1, .2
                        Button:
                            text:'Help?'
                            on_press:popup2.dismiss()
                            on_release:root.manager.current='help'
                        Button:
                            text: 'compare'
                Button:
                    text:'back'
                    on_release: popup2.dismiss()
        Popup:
            id:popup3
            on_parent:
                if self.parent==g1: self.parent.remove_widget(self)
            title: 'friends'
            BoxLayout:
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text:"None of your friends has got it yet be the first one"
                    Button:
                        size_hint: .3, .1
                        pos_hint:{'x':.35,'y':.5}
                        text: "Get his review"
                    BoxLayout:
                        size_hint: 1, .2
                        Button:
                            text:'Help?'
                            on_press:popup2.dismiss()
                            on_release:root.manager.current='help'
                        Button:
                            text: 'compare'
                Button:
                    text:'back'
                    on_release: popup3.dismiss()
        Popup:
            id:popup
            on_parent:
                if self.parent==g1: self.parent.remove_widget(self)
            title: 'friends'
            BoxLayout:
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text:" your friend named ravi has brought this phone"
                    Button:
                        size_hint: .3, .1
                        pos_hint:{'x':.35,'y':.5}
                        text: "Get his review"
                    BoxLayout:
                        size_hint: 1, .2
                        Button:
                            text:'Help?'
                            on_press:popup2.dismiss()
                            on_release:root.manager.current='help'
                        Button:
                            text: 'compare'
                        
                Button:
                    text:'back'
                    on_release: popup.dismiss()
        Popup:
            id:popup1
            on_parent:
                if self.parent==g1: self.parent.remove_widget(self)
            title: 'friends'
            BoxLayout:
            
                Label:
                    text:"Click below to confirm your order "
                Button:
                    text:'Confirm'
                    on_release: root.manager.current="finish"
                    on_release: popup1.dismiss()
                Button:
                    text:"cancel"
                    on_release: popup1.dismiss()
        
        BoxLayout:
            orientation: 'vertical'
            
            id:b1
            
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: 1,1,1,0
                    Rectangle:
                        # self here refers to the widget i.e BoxLayout
                        pos: self.pos
                        size: self.size
                orientation: 'vertical'
                BoxLayout:
                    BoxLayout:
                        orientation: 'vertical'
                        Label:
                            text: "Nokia"
                            
                        Label:
                            text: "5000 rupees"
                        Label:
                            text: "A phone with windows \n and android"
                            size: self.size
                    
                    Image:
                        source:'images/a.jpg'
                        center_x:self.parent.center_x
                        center_y:self.parent.center_y
                    
                
                BoxLayout:
                    size_hint: 1, .1
                    Button:
                        text:'Details'
                        on_release: root.popup.open()
                    Button:
                        text:'Order'
                        on_release: root.popup1.open()
        BoxLayout:
            orientation: 'vertical'
            
            id:b2
            BoxLayout:
                
                canvas.before:
                    Color:
                        rgba: 1,1,1,0
                    Rectangle:
                        # self here refers to the widget i.e BoxLayout
                        pos: self.pos
                        size: self.size
                orientation: 'vertical'
                BoxLayout:
                    BoxLayout:
                        orientation: 'vertical'
                        Label:
                            text: "Nexus"
                            
                        Label:
                            text: "10000 rupees"
                        Label:
                            text: "A great google phone"
                            size: self.size
                    Image:
                        source:'images/b.jpg'
                        center_x:self.parent.center_x
                        center_y:self.parent.center_y
                    
                
                BoxLayout:
                    size_hint: 1, .1
                    Button:
                        text:'Details'
                        on_release: root.popup2.open()
                    Button:
                        text:'Order'
                        on_release: root.popup1.open()
                        
        BoxLayout:
            orientation: 'vertical'
            
            id:b3
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: 1,1,1,0
                    Rectangle:
                        # self here refers to the widget i.e BoxLayout
                        pos: self.pos
                        size: self.size
                
                orientation: 'vertical'
                BoxLayout:
                    Image:
                        source:'images/c.jpg'
                        center_x:self.parent.center_x
                        center_y:self.parent.center_y
                    BoxLayout:
                        orientation: 'vertical'
                        Label:
                            text: "Apple"
                            
                        Label:
                            text: "50000 rupees"
                        Label:
                            text: "The best choice for \n programmers"
                            size: self.size
                    
                
                BoxLayout:
                    size_hint: 1, .1
                    Button:
                        text:'Details'
                        on_release: root.popup3.open()
                    Button:
                        text:'Order'
                        on_release: root.popup1.open()
                        
        Button:
            text:"back"
            on_release: root.manager.current="selection"



